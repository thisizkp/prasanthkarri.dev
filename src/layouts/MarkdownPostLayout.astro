---
import BaseLayout from '../layouts/BaseLayout.astro';
import { formatDate } from '../utils/date.js';

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <div class="postInfo">
        <p class="publishedDate">{formatDate(frontmatter.pubDate)}</p>
        <div class="tags">
            {frontmatter.tags.map((tag) => (
                <p><a href={`/tags/${tag}`}>{tag}</p></div>
            ))}
        </div>
    </div>
    <div class="post">
        <slot />
    </div>
</BaseLayout>

<style>
  .publishedDate {
    font-size: 1rem;
  }

  .postInfo {
    display: flex;
    justify-content: space-between;
  }

  .post {
    font-size: 1.25rem;
    line-height: 1.8;
  }
</style
